ul
  margin  : 0
  padding : 0
  li
    margin-top          : 3px
    margin-left         : 16px
    padding             : 0
    list-style-position : inside
  li:first-child
    margin-top : 0

.side-menu
  ul
    line-style : none
    padding    : 0
    max-width  : 100%
    overflow-x : hidden
  li
    margin : 0
  .md-button
    border-radius   : 0
    cursor          : pointer
    display         : block
    align-items     : inherit
    line-height     : 40px
    margin          : 0
    padding         : 0 16px
    max-height      : 40px
    overflow        : hidden
    text-align      : left
    text-decoration : none
    white-space     : normal
    width           : 100%

.md-button-toggle
  .md-toggle-icon
    display        : block
    margin-left    : auto
    speak          : none
    vertical-align : middle
    transform      : rotate(0deg)
    transition     : transform 0.3s ease-in-out
  .md-toggle-icon.toggled
    transform : rotate(180deg)

.menu-toggle-list
  height   : 0
  overflow : hidden
  position : relative
  z-index  : 1
  a.md-button
    display        : block
    padding        : 0 16px 0 32px
    text-transform : none
    text-rendering : optimizeLegibility
    font-weight    : 400

