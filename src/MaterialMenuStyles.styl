html
body
  font-family : 'Roboto'
  font-size   : 12px
  max-width   : 100%
  max-height  : 100%
  margin      : 0
  padding     : 0

md-toolbar
  .md-toolbar-tools
    h3
      margin-left : 5px
    h3
    h4
      font-size      : 16px
      font-weight    : 400
      text-transform : uppercase

.nav-header
  background-color : #106CC8
  background       : linear-gradient(#185694, #106cc8)
  background       : -webkit-gradient(linear, left top, left bottom, color-stop(0, #185694), color-stop(1, #106cc8))
  background       : -webkit-linear-gradient(top, #185694 0%, #106cc8 100%)
  background       : -moz-linear-gradient(top, #185694 0%, #106cc8 100%)
  background       : linear-gradient(top, #185694 0%, #106cc8 100%)
  border-bottom    : 1px solid #267ED5
  flex-shrink      : 0
  z-index          : 2

.logo
  text-align     : center
  display        : flex
  flex-direction : column
  align-items    : center
  padding        : 0 0 16px
  margin         : 0 auto
  :focus
    outline : none
  > img
    height           : 150px
    width            : auto
    display          : block
    transform-origin : 50% 0
    transform        : scale(1.2)

a.logo
  border-bottom : none

@import "commons/directives/menu/styles.styl"

